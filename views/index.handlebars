<div class="container">
    <div class="logo text-center">
        <img src="/images/logo.png" height="280">
    </div>
    <div class="row text-center add">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="input text-center">
                <h2 class="heading headTitle" id="add">Add A Burger</h2>
                <div class="form-group">
                    <form method="POST" action="/burger/create" class="addOne text-center">
                        <input id="textArea" type="text" name="burger_name">
                        <button id="btnCreate" type="submit">Create!</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="main row">
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
            <div class="leftBurgers text-center">
                <h2 class="heading headTitle">New Burgers</h2>
                <ul>
                    {{#each burger}}
                        {{#unless this.devoured}}
                        <li>
                            <p class="burgerType">{{this.burger_name}}</p>
                            <form id="add" method="POST" action="/burger/update?_method=PUT" class="button-size">
                                <input input type="hidden" type="text" name="burger_id" value={{this.id}}>
                                <input class="custInput" input type="text" name="customer" placeholder="Customer?">
                                <br><br>
                                <button type="submit" class="btnDevour">Devour it!</button>
                            </form>
                        </li>
                        {{/unless}}
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
            <div class="rightBurgers text-center">
                <h2 class="heading headTitle">Burgers Devoured</h2>
                <ul>
                    {{#each burger}}
                        {{#if this.devoured}}
                            {{#if this.Customer.customer}}
                            {{!-- A read-only input field cannot be modified (however, a user can tab to it, highlight it, and copy the text from it). --}}
                                <li class="burgerType">{{this.burger_name}}</li>
                                <li class="burgerEater">Devoured by {{this.Customer.customer}}</li>
                            {{else}}
                                <li class="burgerType">{{this.burger_name}}</li>
                                <li class="burgerEater">Devoured by magic!</li>
                            {{/if}}
                        {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>